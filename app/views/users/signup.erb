<div class="container">

  <div class="jumbotron">
    <center>
        <h1>Create Account</h1>
        <% if !@errors.nil?%>
          <% @errors.each do |error| %>
              <%= error%>
            <%end%>
          <% end %>

        <%= form_for @user, url: {action: "post_signup"} do |f| %>
          <%= f.text_field :email %>
          <%= f.text_field :username %>
          <%= f.password_field :password %>
          <%= f.submit "Create" %>
        <% end %>

    </center>
  </div>
</div>