<div class="container">

  <div class="jumbotron">
    <center>
        <h1>Login to Account</h1>
        <% if !@errors.nil?%>
          <% @errors.each do |error| %>
              <%= error%>
            <%end%>
          <% end %>

        <%= form_for @user, url: {action: "post_login"} do |f| %>
          <%= f.text_field :username, :placeholder => "Username" %>
          <%= f.password_field :password, :placeholder => "Password" %>
          <%= f.submit "Login" %>
        <% end %>

    </center>
  </div>
</div>